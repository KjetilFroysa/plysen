<%- include('layout', { title: 'Jobb Oversikt', content: `
<div class="page-container">
    <header class="page-header">
        <h1>Bestillinger</h1>
    </header>

    <main class="content-container">
    <div class="row">
        <div class="col-md-6">
            <table id="ordersTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Prioritet</th>
                        <th>Bilde</th>
                        <th>Navn</th>
                        <th>Nummer</th>
                        <th>Type</th>
                        <th>Dato<br>Bestilt</th>
                    </tr>
                </thead>
                <tbody id="priorityTable">
                    <!-- Rows will be populated by JavaScript -->
                </tbody>
            </table>
        </div>
        <div class="col-md-6 d-flex flex-column align-items-center">
            <div class="button-container-jobboversikt">
                <button id="addOrderButton" class="btn btn-primary mb-2">Legg til Bestilling</button>
                <button id="editOrderButton" class="btn btn-secondary mb-2">Rediger Bestilling</button>
                <button id="deleteOrderButton" class="btn btn-danger mb-2">Slett Bestilling</button>
                <div id="undoContainer" class="mt-3" style="display: none;">
                    <button id="undoButton" class="btn btn-warning">Whoops</button>
                </div>
            </div>
        </div>
    </div>
</div>
</main>

<script src="/javascripts/jobbOversikt.js"></script>
` }) %>